@model Meeting

<h1>Add a Meet Up</h1>

<form action="/meeting/new" method="post">
    <div class="form-group">
        <label for="Title">Name</label>
        <input asp-for="Title" class="form-control w-50">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Date">Date and Time</label>
        <input asp-for="Date" class="form-control w-50">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Duration">Duration of Event</label>
        <div class="d-flex justify-content-left">
            <input asp-for="Duration" class="form-control w-25">
            <select asp-for="TimeType" class="form-control w-25">
                <option value="Hours">Hours</option>
                <option value="Minutes">Minutes</option>
                <option value="Days">Days</option>
            </select>
        </div>
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description of Event</label>
        <input asp-for="Description" class="form-control w-50">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create Meet Up" class="btn btn-info">
    </div>

</form>